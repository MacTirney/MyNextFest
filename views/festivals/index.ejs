<% layout('layouts/boilerplate') %>
    <h1>All Festivals</h1>
    <div>
        <a href="/festivals/new">Add Festival</a>
    </div>
    <% for (let festival of festivals) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= festival.image %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= festival.title %></h5>
                        <p class="card-text"><%= festival.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= festival.location %></small>
                        </p>
                        <a href="/festivals/<%= festival._id %>" class="btn btn-primary">View <%= festival.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>